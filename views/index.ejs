<%- include ('partials/header.ejs') %>

<body class="cadastrarFunc">
    <div class="painel_cadastro container col-md-7">
        <h1 style="text-align: center;">Cadastrar Funcionário</h1>
        <hr>
        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label style="">Nome Completo:</label>
                    <input type="text" class="form-control" required id="inNome" placeholder="Ex: José Maria...">
                  </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>CPF:</label>
                    <input type="text" class="form-control" required id="inCpf" placeholder="Ex:999.999.999-99" maxlength="14">
                  </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Telefone:</label>
                    <input type="text" class="form-control" required id="inTel" placeholder="(99) 99999-9999">
                  </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Email</label>
                    <input type="email" class="form-control" required id="inMail" placeholder="exemplo@exemplo.com.br">
                  </div>
            </div>
            <div class="form-row" >
                <div class="form-group col-md-6">
                    <label>Departamento</label>
                    <input type="text" class="form-control" required id="inDepar" placeholder="">
                  </div>
            </div>
            <div class="container">
                <div class="btn-group pull-left">      
                        <button type="reset" class='btn btn-lg btn-warning' id="btnlimpar">Apagar Campo</button>
                </div>
                <div class="btn-group pull-right">      
                        <button type="submit" class='btn btn-lg btn-success' id="btnConfirmar">Confirmar</button>
                </div>
            </div>
        </form>
        <br>
    </div>
</body>
<%- include('partials/footer.ejs')%>